<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_system_video_player"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="com.example.twt.mobileplayer.activity.SystemVideoPlayer">
    <com.example.twt.mobileplayer.view.VitamioVideoView
        android:id="@+id/videoview"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <include layout="@layout/media_controller" android:id="@+id/media_controller"/>
    <include layout="@layout/ll_buffer" android:id="@+id/ll_buffer"/>
    <include layout="@layout/ll_loading" android:id="@+id/ll_loading"/>
</RelativeLayout>
